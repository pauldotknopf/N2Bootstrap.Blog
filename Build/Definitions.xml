<?xml version="1.0" encoding="utf-8" ?>
<Packages>
  <PreActions>
    <Command>$(buildDirectory)/Build.bat $(version)</Command>
  </PreActions>
  <Package name="N2Bootstrap">
    <NuSpecPath>$(buildDirectory)/N2Bootstrap.Blog.nuspec</NuSpecPath>
    <OutputDirectory>$(buildDirectory)</OutputDirectory>
    <BasePath>$(buildDirectory)/Output/</BasePath>
    <Deployments>
      <Deployment name="Internal Deployment" path="E:\NuGetPackages\" />
    </Deployments>
  </Package>
  <Package name="N2Bootstrap.Library">
    <NuSpecPath>$(buildDirectory)/N2Bootstrap.Blog.Library.nuspec</NuSpecPath>
    <OutputDirectory>$(buildDirectory)</OutputDirectory>
    <BasePath>$(buildDirectory)/Output/</BasePath>
    <Deployments>
      <Deployment name="Internal Deployment" path="E:\NuGetPackages\" />
    </Deployments>
  </Package>
</Packages>